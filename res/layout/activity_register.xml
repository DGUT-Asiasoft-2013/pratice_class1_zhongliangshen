<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="#1F5880">
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <fragment
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.example.fragment.SimpleTextInputCellFragment"
        tools:layout="@layout/fragment_input_simpletext" />
    <fragment
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.example.fragment.SimpleTextInputCellFragment"
        tools:layout="@layout/fragment_input_simpletext" />
    <fragment
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.example.fragment.SimpleTextInputCellFragment"
        tools:layout="@layout/fragment_input_simpletext" />

    <fragment
        android:id="@+id/password_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.example.fragment.SimpleTextInputCellFragment"
        tools:layout="@layout/fragment_input_simpletext" />

    <fragment
        android:id="@+id/frg_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.example.fragment.PictureInputCellFragment"
        tools:layout="@layout/fragmen_input_picture" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="submit"
        />
    </LinearLayout>
</ScrollView>
    
</LinearLayout>